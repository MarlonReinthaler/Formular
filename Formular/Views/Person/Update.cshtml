        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Ort, new { })
            @Html.EditorFor(m => m.Ort, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Ort, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.PLZ, new { })
            @Html.EditorFor(m => m.PLZ, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.PLZ, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PAlter, new { })
        @Html.EditorFor(m => m.PAlter, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.PAlter, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { })
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <input type="submit" class="btn btn-outline-info" value="Update" />
    <a asp-action="Index" class="btn btn-outline-danger">Back</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
